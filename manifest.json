{
    "manifest_version": 3,
    "name": "PDF Summarizer",
    "version": "1.0",
    "description": "Generates a summary of the current PDF open",
    "permissions":[
      "activeTab",
      "scripting",
      "storage"
    ],

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "host_permissions": ["API_URL/*"],
    "background": {
      "service_worker": "background.js"
    }
  }
  